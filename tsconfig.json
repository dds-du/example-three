{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"module": "es2020",
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "es2015",
		"allowJs": true,
		"isolatedModules": true,
		"strictNullChecks": false,
		"strict": false,
		"noImplicitThis": true,
		"lib": [
			"es2018",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.d.ts"
	]
}
